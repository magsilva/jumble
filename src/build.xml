<?xml version="1.0" encoding="ISO-8859-1"?>
<project name="jumble" basedir="." default="jar">

    <property name="src.dir" value="."/>
	<property name="release.dir" value = "c:\jumblerelease"/>
    <property name="classes.dir" value="${release.dir}/classes"/>

    <target name="clean" description="Delete all generated files">
        <delete dir="${classes.dir}" failonerror="false"/>
        <delete file="${release.dir}/${ant.project.name}.jar"/>
    </target>

    <target name="compile" description="Compiles the Task">
        <mkdir dir="${classes.dir}"/>
        <javac srcdir="${src.dir}" destdir="${classes.dir}"/>
    </target>

    <target name="jar" description="JARs the Task" depends="compile">
        <jar destfile="${release.dir}/${ant.project.name}.jar" basedir="${classes.dir}"/>
    </target>

</project>